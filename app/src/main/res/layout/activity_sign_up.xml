<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".SignUpActivity">

    <!-- ScrollView for keyboard & small screens -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- INNER CONSTRAINT -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TOP GUIDELINE -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="96dp" />

            <!-- App Logo -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/food"
                app:layout_constraintTop_toBottomOf="@id/topGuide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.45" />

            <!-- App Title -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Waves of Food"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Section Title -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sign Up Here for Your Admin Dashboard"
                android:gravity="center"
                android:textColor="#8AB05A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Location Title -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Choose Your Location"
                android:textColor="#8AB05A"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Dropdown Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/locationBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconDrawable="@drawable/baseline_arrow_downward_24"
                app:endIconTint="@color/black"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/Listoflocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose Location" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Owner Name -->
            <EditText
                android:id="@+id/Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:hint="  Name of Owner"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/locationBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Restaurant Name -->
            <EditText
                android:id="@+id/Restaurant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:drawableStart="@drawable/baseline_home_24"
                android:hint="  Name of Restaurant"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Email/Phone -->
            <EditText
                android:id="@+id/emailphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:drawableStart="@drawable/baseline_mail_outline_24"
                android:hint="  E-mail or Phone Number"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/Restaurant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:hint="  Password"
                android:inputType="textPassword"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/emailphone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Create Account Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createaccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:backgroundTint="#8AB05A"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Bottom Text -->
            <TextView
                android:id="@+id/donthaveaccountbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:text="Don't Have Account?"
                android:textColor="#8AB05A"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/createaccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
